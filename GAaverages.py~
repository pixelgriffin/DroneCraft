result_files = ['ofile1', 'ofile2', 'ofile3', 'ofile4', 'ofile5', 'ofile6', 'ofile7', 'ofile8', 'ofile9', 'ofile10', 'ofile11', 'ofile12', 'ofile13', 'ofile14', 'ofile15', 'ofile16', 'ofile17', 'ofile18', 'ofile19', 'ofile20', 'ofile21', 'ofile22', 'ofile23', 'ofile24', 'ofile25', 'ofile26', 'ofile27', 'ofile28', 'ofile29', 'ofile30']

numbers = [[0 for x in range(3)] for x in range(300)] 

for i in xrange (len(result_files)):
	with open (result_files[i], 'r') as results:
		for line in results:
			values = line.split()
			#print(values[0] + ", " + values[1] + ", " + values[2])
			numbers[int(values[0])][1] = numbers[int(values[0])][1] + float(values[1])
			numbers[int(values[0])][2] = numbers[int(values[0])][2] + float(values[2])
			
avgFile = open ("averageFitness", 'w')
			
for i in range (0, 31):
	numbers[i][1] = numbers[i][1] / len(result_files)
	numbers[i][2] = numbers[i][2] / len(result_files)
	avgFile.write (str(i*20) + " " + str(numbers[i][1]) + " " + str(numbers[i][2]) + "\n")
